<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="lcsw.mapper.AnswerMapper">

	<!--延迟加载  -->
  <resultMap id="AnswerMap" type="Answer" >
    <id column="answer_id" property="answerId" jdbcType="INTEGER" />
    <result column="answer_info" property="info" jdbcType="VARCHAR" />
    <result column="answer_analysis" property="analysis" jdbcType="VARCHAR" />
    <result column="score" property="score" jdbcType="INTEGER" />
  </resultMap>
  
  
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="AnswerMap">
  		select answer_id,answer_info,answer_analysis,score from tbl_answer where answer_id = #{id}
  	</select>
  	
  	<insert id="insert" parameterType="answer" keyProperty="answerId" useGeneratedKeys="true">
    	insert into tbl_answer (answer_info,answer_analysis,score)
    	values (#{info,jdbcType=VARCHAR},
      	#{analysis,jdbcType=VARCHAR}, #{score,jdbcType=INTEGER})
  	</insert>
	
	 <update id="updateByPrimaryKey" parameterType="answer" >
    	update tbl_answer
    	set answer_info = #{info,jdbcType=VARCHAR},
      		answer_analysis = #{analysis,jdbcType=VARCHAR},
      		score = #{score,jdbcType=INTEGER}
    	where answer_id = #{answerId,jdbcType=INTEGER}
  </update>
  
  	<delete id="deleteByPrimaryKey" parameterType="java.util.List">
  		delete from tbl_answer
    	where answer_id in 
    	<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
    		#{item}
    	</foreach>
 	 </delete>

</mapper>