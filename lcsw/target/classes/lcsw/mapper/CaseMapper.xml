<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="lcsw.mapper.CaseMapper">

	<!--延迟加载  -->
  <resultMap id="CaseMap" type="lcsw.domain.Case" >
    <id column="case_id" property="caseId" jdbcType="INTEGER" />
    <result column="chief_complain" property="chiefComplain" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="DATE" />
    <result column="creater" property="creater" jdbcType="VARCHAR" />
    <result column="case_type" property="caseType" jdbcType="INTEGER" />
    <result column="title_type" property="titleType" jdbcType="VARCHAR" />
  </resultMap>
  
  
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="CaseMap">
  		select case_id,chief_complain,create_time,creater,case_type,title_type from tbl_case where case_id = #{id}
  	</select>
  	
  	<select id="selectAll" parameterType="java.lang.Integer" resultMap="CaseMap">
  		select case_id,chief_complain,create_time,creater,case_type,title_type from tbl_case
  	</select>
  	
  	<insert id="insert" parameterType="case" keyProperty="caseId" useGeneratedKeys="true">
    	insert into tbl_case (chief_complain, create_time, creater, case_type, title_type)
    	values (#{chiefComplain,jdbcType=VARCHAR}, #{createTime,jdbcType=DATE}, #{creater,jdbcType=VARCHAR}, #{caseType,jdbcType=INTEGER}, #{titleType,jdbcType=VARCHAR})
  	</insert>
	
	 <update id="updateByPrimaryKey" parameterType="case" >
    	update tbl_case
    	set chief_complain = #{chiefComplain,jdbcType=VARCHAR},
      		create_time = #{createTime,jdbcType=DATE},
      		creater = #{creater,jdbcType=VARCHAR},
      		case_type = #{caseType,jdbcType=INTEGER},
      		title_type = #{titleType,jdbcType=VARCHAR}
    	where case_id = #{caseId,jdbcType=INTEGER}
  </update>
  
  	<delete id="deleteByPrimaryKey" parameterType="java.util.List">
  		delete from tbl_case
    	where case_id in 
    	<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
    		#{item}
    	</foreach>
 	 </delete>

</mapper>
